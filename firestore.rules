
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products: Readable by any authenticated user, writable only by admins.
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Users can read/write their own data. Admins can read/write any user's data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Orders & Commissions: Authenticated users can create. Reading/updating would need more specific rules.
    match /orders/{orderId} {
      allow create: if request.auth != null;
    }

    match /commissions/{commissionId} {
      allow create: if request.auth != null;
    }
  }
}
