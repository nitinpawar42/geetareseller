
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin users to write to the "products" folder.
    // This rule checks the user's custom claims in Firestore to verify their role.
    match /products/{productId}/{allPaths=**} {
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Allow anyone to read product images, as they are public-facing.
      allow read;
    }
  }
}
